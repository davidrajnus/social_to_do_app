
<%= form_for [current_user, @task], :remote => true do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :complete_by %>
<%= f.date_field :complete_by, class: 'form-control'%>

<%= f.submit "Add task", class: "btn btn-primary" %>
<% end %>
